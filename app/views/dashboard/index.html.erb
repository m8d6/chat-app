<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="font-bold text-4xl">Hoş Geldiniz!</h1>
    
    <%= button_to "Çıkış Yap", logout_path, method: :delete, class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white font-medium" %>
  </div>

  <div class="mt-8">
    <p>Burası ana sayfa içeriği.</p>
  </div>
</div> 