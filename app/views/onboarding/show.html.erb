<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="font-bold text-4xl">Kullanıcı Bilgileri</h1>
  </div>

  <div class="mt-8">
    <%= form_with model: current_user, url: onboarding_path, method: :patch, class: "form-container flex flex-col gap-6 p-6 bg-white shadow-lg rounded-lg max-w-md mx-auto" do |f| %>
      <div class="form-header">
        <h2 class="text-2xl font-semibold text-gray-800 text-center">Profilinizi Tamamlayın</h2>
      </div>

      <%= render partial: "components/input", locals: { form: f, field: :first_name, type: :text, options: { placeholder: "İsim" } } %>
      <%= render partial: "components/input", locals: { form: f, field: :last_name, type: :text, options: { placeholder: "Soyisim" } } %>
      
      <div class="form-group mb-4">
        <%= f.label :birth_date, "Doğum Tarihi", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :birth_date, class: "mt-1 focus:ring-teal-500 focus:border-teal-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :gender, "Cinsiyet", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :gender, ["Erkek", "Kadın", "Diğer"], { include_blank: "Seçiniz" }, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-teal-500 focus:border-teal-500 sm:text-sm" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :title, "Ünvan", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :title, class: "mt-1 focus:ring-teal-500 focus:border-teal-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Örn: Mühendis, Öğretmen, vb." %>
      </div>

      <div class="form-submit">
        <%= f.submit "Kaydet", class: "submit-btn rounded-lg py-3 bg-teal-600 text-white font-semibold hover:bg-teal-700 transition duration-300 w-full max-w-xs mx-auto text-center cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>