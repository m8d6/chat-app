<div id="<%= modal_id %>" data-modal-target="modal" class="modal-overlay hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
  <div class="modal-content bg-white p-6 rounded-lg max-w-md w-full">
    <h3 class="text-xl font-semibold mb-4"><%= modal_title %></h3>
    <p><%= modal_content %></p>
    <div class="mt-4 text-center">
      <button class="py-2 px-4 bg-teal-600 text-white rounded-lg hover:bg-teal-700" data-action="modal#close">
        <%= modal_button_text %>
      </button>
    </div>
  </div>
</div>
