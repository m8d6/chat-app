<%= form_with model: @session, url: login_path, class: "form-container flex flex-col gap-6 p-6 bg-white shadow-lg rounded-lg max-w-md mx-auto" do |f| %>
  <div class="form-header">
    <h2 class="text-2xl font-semibold text-gray-800 text-center"><%= I18n.t('sessions.form.title') %></h2>
  </div>

  <%= render partial: "components/input", locals: { form: f, field: :email_address, type: :email, options: { placeholder: I18n.t("sessions.form.email.placeholder") } } %>
  <%= render partial: "components/input", locals: { form: f, field: :password, type: :password, options: { placeholder: I18n.t("sessions.form.password.placeholder") } } %>

  <div class="form-submit">
    <%= f.submit I18n.t('sessions.form.submit'), class: "submit-btn rounded-lg py-3 bg-teal-600 text-white font-semibold hover:bg-teal-700 transition duration-300 w-full max-w-xs mx-auto text-center cursor-pointer" %>
  </div>

  <div class="mt-2 text-center text-sm">
    <%= link_to I18n.t('sessions.form.register_link'), new_registration_path, class: "text-teal-600 hover:underline" %>
  </div>
<% end %> 