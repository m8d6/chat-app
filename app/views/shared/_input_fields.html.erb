<div class="form-inputs flex flex-col gap-4">
  <div class="input-group flex flex-col gap-1">
    <%= f.label :email_address, class: "text-sm font-medium text-gray-700" %>
    <%= f.email_field :email_address, class: "w-full px-4 py-2 border rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-teal-500 transition #{f.object.errors[:email_address].any? ? 'border-red-500 text-red-900 placeholder-red-700' : 'text-gray-900 placeholder-gray-700 border-gray-300'}" %>
    <% f.object.errors.full_messages_for(:email_address).each do |message| %>
      <p class="text-red-500 text-sm mt-1"><%= message %></p>
    <% end %>
  </div>

  <div class="input-group flex flex-col gap-1">
    <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-teal-500 transition #{f.object.errors[:password].any? ? 'border-red-500 text-red-900 placeholder-red-700' : 'text-gray-900 placeholder-gray-700 border-gray-300'}" %>
    <% f.object.errors.full_messages_for(:password).each do |message| %>
      <p class="text-red-500 text-sm mt-1"><%= message %></p>
    <% end %>
  </div>

  <div class="input-group flex flex-col gap-1">
    <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-teal-500 transition #{f.object.errors[:password_confirmation].any? ? 'border-red-500 text-red-900 placeholder-red-700' : 'text-gray-900 placeholder-gray-700 border-gray-300'}" %>
    <% f.object.errors.full_messages_for(:password_confirmation).each do |message| %>
      <p class="text-red-500 text-sm mt-1"><%= message.gsub(/Password.*match Password/, "Passwords do not match") %></p>
    <% end %>
  </div>
</div>
