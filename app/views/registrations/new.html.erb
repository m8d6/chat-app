<%= form_with model: @user, url: registration_path, class: "flex flex-col gap-4" do |f| %>
  <div class="flex flex-col gap-1">
    <%= f.label :email_address %>
    <%= f.email_field :email_address, class: "border border-grey-100 rounded p-2" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= f.label :password %>
    <%= f.password_field :password, class: "border border-grey-100 rounded p-2" %>
  </div>
  
  <div class="flex flex-col gap-1">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "border border-grey-100 rounded p-2" %>
  </div>
  
  <div class="flex gap-1">
    <%= f.checkbox :terms_and_service %>
    <%= f.label :terms_and_service %>
  </div>

  <%= f.submit :submit, class: "rounded p-4 bg-teal-600 text-white hover:bg-teal-800 hover:cursor-pointer transition duration-300" %>
<% end %>