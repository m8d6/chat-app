<div class="form-container flex flex-col gap-6 p-6 bg-white shadow-lg rounded-lg max-w-md mx-auto">
  <% if notice.present? %>
    <div class="mb-4 text-center">
      <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="form-header">
    <h2 class="text-2xl font-semibold text-gray-800 text-center"><%= t('.welcome', name: user.first_name) %></h2>
  </div>

  <div class="profile-field">
    <span class="text-sm font-medium text-gray-500"><%= t('.first_name.label') %></span>
    <span class="block text-base font-medium"><%= user.first_name %></span>
  </div>

  <div class="profile-field">
    <span class="text-sm font-medium text-gray-500"><%= t('.last_name.label') %></span>
    <span class="block text-base font-medium"><%= user.last_name %></span>
  </div>

  <div class="profile-field">
    <span class="text-sm font-medium text-gray-500"><%= t('.email.label') %></span>
    <span class="block text-base font-medium"><%= user.email_address %></span>
  </div>

  <div class="profile-field">
    <span class="text-sm font-medium text-gray-500"><%= t('.birth_date.label') %></span>
    <span class="block text-base font-medium"><%= user.birth_date || "-" %></span>
  </div>

  <div class="profile-field">
    <span class="text-sm font-medium text-gray-500"><%= t('.gender.label') %></span>
    <span class="block text-base font-medium"><%= user.gender || "-" %></span>
  </div>
  
  <div class="profile-field">
    <span class="text-sm font-medium text-gray-500"><%= t('.title.label') %></span>
    <span class="block text-base font-medium"><%= user.title || "-" %></span>
  </div>

  <div class="form-submit">
    <%= button_to t('.logout'), session_path, method: :delete, class: "submit-btn rounded-lg py-3 bg-red-600 text-white font-semibold hover:bg-red-700 transition duration-300 w-full max-w-xs mx-auto text-center cursor-pointer" %>
  </div>
</div> 