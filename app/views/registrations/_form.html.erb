<%= form_with model: @user, url: registration_path, class: "form-container flex flex-col gap-6 p-6 bg-white shadow-lg rounded-lg max-w-md mx-auto" do |f| %>
  <div class="form-header">
    <h2 class="text-2xl font-semibold text-gray-800 text-center"><%= t('.title') %></h2>
  </div>

  <%= render 'shared/input_fields', f: f %>

  <div class="form-terms flex flex-col gap-2">
    <div class="flex items-center gap-2">
      <%= f.check_box :terms_and_service %>
      <%= f.label :terms_and_service, class: "text-sm text-gray-700 cursor-pointer" do %>
        <%= t('.agreement.text') %>
      <% end %>
      <button type="button" class="text-teal-600 hover:underline terms-and-service-modal-trigger">
        <%= t('.agreement.link') %>
      </button>
    </div>

    <% @user.errors.full_messages_for(:terms_and_service).each do |message| %>
      <p class="text-red-500 text-sm mt-1"><%= message %></p>
    <% end %>
  </div>

  <div class="form-submit">
    <%= f.submit t('.submit'), class: "submit-btn rounded-lg py-3 bg-teal-600 text-white font-semibold hover:bg-teal-700 transition duration-300 w-full max-w-xs mx-auto text-center cursor-pointer #{'bg-red-500' if @user.errors.any?}" %>
  </div>
<% end %>
