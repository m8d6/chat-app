<% if alert = flash[:alert] %>
  <div class="py-2 px-3 bg-red-50 text-red-500 font-medium rounded-lg">
    <%= alert %>
  </div>
<% end %>

<% if notice = flash[:notice] %>
  <div class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg">
    <%= notice %>
  </div>
<% end %>

<%= render partial: "form" %>
