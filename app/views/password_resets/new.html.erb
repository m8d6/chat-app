<% content_for :title, t('.title') %>

<h2 class="text-2xl font-semibold text-gray-800 text-center mb-6"><%= t('.form_title') %></h2>

<%= form_with model: @user, url: password_resets_path, class: "form-container flex flex-col gap-6 p-6 bg-white shadow-lg rounded-lg max-w-md mx-auto" do |f| %>

  <p class="text-sm text-gray-600 text-center"><%= t('.instructions') %></p>

  <%= render partial: "components/input", locals: {
          form: f,
          field: :email_address,
          type: :email,
          options: { required: true, autofocus: true, autocomplete: "email", placeholder: t('.email_placeholder') }
        } %>

  <div class="form-submit">
    <%= f.submit t('.submit'), class: "submit-btn rounded-lg py-3 bg-teal-600 text-white font-semibold hover:bg-teal-700 transition duration-300 w-full text-center cursor-pointer" %>
  </div>

  <div class="mt-2 text-center text-sm">
    <%= link_to t('.back_to_sign_in'), new_session_path, class: "text-teal-600 hover:underline" %>
  </div>
<% end %>
